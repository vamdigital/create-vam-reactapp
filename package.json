{
  "name": "create-vam-react",
  "version": "0.0.4",
  "license": "MIT",
  "bin": "bin/setup.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vamdigital/create-vamreactapp.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "tsc:watch": "yarn tsc --watch",
    "lint": "tsc --noEmit && eslint src/**/*.ts{,x}",
    "lint:fix": "npm run lint --fix",
    "coverageFromYarn": "yarn jest ${0} --coverage --collectCoverageOnlyFrom=${1} --watch",
    "check-types": "tsc",
    "test": "jest -env=jsdom --coverage --coverageReporters='text-summary'",
    "pre-commit-lint": "npm run check-types && yarn lint-staged"
  },
  "dependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@reduxjs/toolkit": "^1.6.1",
    "@testing-library/dom": "^8.2.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.13",
    "chalk-animation": "^1.6.0",
    "husky": "^7.0.2",
    "inquirer": "^8.1.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-export-default-from": "^7.14.5",
    "@babel/plugin-proposal-pipeline-operator": "^7.15.0",
    "@babel/plugin-transform-modules-commonjs": "^7.12.13",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react-app": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.0",
    "jest-circus": "^26.0.0",
    "jest-scss-transform": "^1.0.1",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.1.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "vite": "^2.5.1",
    "vite-tsconfig-paths": "^3.3.13"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest/mocks/jest.setup.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/main.tsx"
    ],
    "coverageReporters": [
      "lcov",
      "html",
      "json",
      "text-summary",
      "clover"
    ],
    "coveragePathIgnorePatterns": [
      "./src/*/*.types.{ts,tsx}",
      "./src/index.tsx",
      "./src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 60,
        "branches": 0,
        "lines": 0,
        "functions": 0
      }
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.(js|jsx|mjs|cjs)$": "ts-jest",
      "^.+\\.scss$": "jest-scss-transform",
      "^.+\\.css$": "<rootDir>/jest/mocks/cssMocks.js",
      "^.+\\.svg$": "<rootDir>/jest/mocks/svgTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy",
      "@components/(.*)": "<rootDir>/src/components/$1",
      "@context/(.*)": "<rootDir>/src/context/$1",
      "@features/(.*)": "<rootDir>/src/features/$1",
      "@pages/(.*)": "<rootDir>/src/pages/$1",
      "@store/(.*)": "<rootDir>/src/store/$1"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "react-app",
          [
            "env",
            {
              "modules": false
            }
          ]
        ]
      }
    }
  }
}
